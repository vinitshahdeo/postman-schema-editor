{
	"name": "postman-schema-editor-beta",
	"displayName": "Postman Schema Editor",
	"description": "Edit your Postman Schema directly into VS Code",
	"version": "1.0.2",
	"publisher": "wow",
	"engines": {
		"vscode": "^1.51.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vinitshahdeo/postman-schema-editor"
	},
	"icon": "postman.jpeg",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "postman-schema-editor.fetchPostmanSchema",
				"title": "Fetch Schema from Postman"
			},
			{
				"command": "postman-schema-editor.openSchemaVersion",
				"title": "Open a specific version of the schema"
			},
			{
				"command": "postman-schema-editor.publishSchemaToPostman",
				"title": "Publish Schema to Postman"
			},
			{
				"command": "postmanApis.syncVersionToPostman",
				"title": "Sync Schema to Postman",
				"icon": {
					"light": "media/upload-stroke.svg",
					"dark": "media/upload-stroke.svg"
				}
			},
			{
				"command": "postmanApis.syncVersionFromPostman",
				"title": "Sync Schema from Postman",
				"icon": {
					"light": "media/syncing-stroke.svg",
					"dark": "media/syncing-stroke.svg"
				}
			},
			{
				"command": "postmanApis.refreshEntry",
				"title": "Refresh tree view",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "postmanApis.syncApiToPostman",
				"title": "Sync API to Postman",
				"icon": {
					"light": "media/upload-stroke.svg",
					"dark": "media/upload-stroke.svg"
				}
			},
			{
				"command": "postmanApis.syncApiFromPostman",
				"title": "Sync API from Postman",
				"icon": {
					"light": "media/syncing-stroke.svg",
					"dark": "media/syncing-stroke.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "postmanApis.refreshEntry",
					"when": "view == postmanApis",
					"group": "navigation"
				}
			],
			"editor/context": [
				{
					"command": "postman-schema-editor.publishSchemaToPostman",
					"group": "Postman"
				}
			],
			"view/item/context": [
				{
					"command": "postmanApis.syncVersionToPostman",
					"when": "view == postmanApis && viewItem == apiVersion",
					"group": "inline"
				},
				{
					"command": "postmanApis.syncVersionFromPostman",
					"when": "view == postmanApis && viewItem == apiVersion",
					"group": "inline"
				},
				{
					"command": "postmanApis.syncApiToPostman",
					"when": "view == postmanApis && viewItem == api",
					"group": "inline"
				},
				{
					"command": "postmanApis.syncApiFromPostman",
					"when": "view == postmanApis && viewItem == api",
					"group": "inline"
				}

			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "package-explorer",
					"title": "Postman",
					"icon": "media/pm.svg"
				}
			]
		},
		"views": {
			"package-explorer": [
				{
					"id": "fetchApi",
					"name": "FETCH API",
					"icon": "media/dep.svg",
					"contextualTitle": "Package Explorer"
				},
				{
					"id": "postmanApis",
					"name": "APIS",
					"icon": "media/dep.svg",
					"contextualTitle": "Package Explorer"
				}
			]
		},
		"configuration": {
			"title": "postman-schema-editor",
			"properties": {
				"postmanSchemaEditor.apiKey": {
					"type": "string",
					"markdownDescription": "The API Key used to authenticate the postman API. Get your API key from [here](https://go.postman.co/integrations/services/pm_pro_api)"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.51.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"async": "^3.2.0",
		"lodash": "^4.17.20",
		"request": "2.88.2",
		"@types/vscode": "^1.51.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
